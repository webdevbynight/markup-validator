{
  "name": "markup-validator",
  "version": "0.0.0",
  "description": "Check the markup validity of HTML, CSS, SVG and XML files using the W3C validator",
  "keywords": ["css", "css3", "html", "html5", "markup", "svg", "validator", "w3c", "xml"],
  "homepage": "https://github.com/webdevbynight/markup-validator.git",
  "bugs": {
    "url": "https://github.com/webdevbynight/markup-validator/issues"
  },
  "author": "Victor Brito (https://victor-brito.dev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/webdevbynight/markup-validator.git"
  },
  "files": ["dist"],
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">= 18.20.5"
  },
  "main": "./dist/index.js",
  "scripts": {
    "biome": "biome check --write .",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:format:check": "biome format .",
    "biome:lint": "biome lint --write .",
    "biome:lint:check": "biome lint .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "build": "tsc",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "git-format-staged": "3.1.1",
    "husky": "^9.1.7",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
  }
}
